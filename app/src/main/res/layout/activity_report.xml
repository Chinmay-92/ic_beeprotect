    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:minHeight="200dp">



    <RelativeLayout
        android:id="@+id/report"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Your Test Report"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/cancerchancesLabel"
            android:layout_marginTop="30dp"
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cancer probability"
            android:layout_marginRight="10dp"
            android:textSize="22sp"/>


        <TextView
            android:id="@+id/cancerchances"
            android:layout_marginTop="30dp"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/cancerchancesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="22sp"/>


        <TextView
            android:id="@+id/tempdifferenceLabel"
            android:layout_below="@id/cancerchances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:text="Breasts temp difference"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tempdifference"
            android:layout_toRightOf="@id/tempdifferenceLabel"
            android:layout_below="@id/cancerchances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/painpercentLabel"
            android:layout_below="@id/tempdifference"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Pain meter"
            android:layout_height="wrap_content"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/painpercent"
            android:layout_toRightOf="@id/painpercentLabel"
            android:layout_below="@id/tempdifference"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/mlresponse"
        android:layout_below="@id/report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        android:textColor="@android:color/holo_green_dark"
        android:background="@drawable/bordertextview"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"
        android:hint="Instruction"/>


    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Exit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@id/mlresponse"
        android:layout_centerHorizontal="true"/>

    </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>



