    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="Test Report"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="32sp"/>

    <TextView
        android:id="@+id/mlresponse"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        android:textColor="@android:color/holo_green_dark"
        android:background="@drawable/bordertextview"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"
        android:hint="Instruction"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_below="@id/mlresponse"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:minHeight="200dp">

        <TextView
            android:id="@+id/cancerchancesLabel"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cancer probability"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/cancerchances"
            android:layout_width="wrap_content"
            android:text="__ %"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="42sp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tempcard"
        android:layout_toRightOf="@id/card"
        android:layout_below="@id/mlresponse"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:minHeight="200dp">

        <TextView
            android:id="@+id/tempdifferenceLabel"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Breasts temp difference"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tempdifference"
            android:layout_width="wrap_content"
            android:text="_.__"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="42sp"/>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/carddivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_below="@id/card"
        android:background="@android:color/darker_gray"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/paincard"
        android:layout_below="@id/carddivider"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        app:cardBackgroundColor="#BE4C4C"
        android:minHeight="200dp">

        <TextView
            android:id="@+id/painpercentLabel"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pain meter"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/painpercent"
            android:layout_width="wrap_content"
            android:text="__ %"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="42sp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/durationcard"
        android:layout_toRightOf="@id/paincard"
        android:layout_below="@id/carddivider"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#8BC34A"
        android:minHeight="200dp">

        <TextView
            android:id="@+id/durationLabel"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Time elapsed"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:text="__:__ mm:ss"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/paincarddivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_below="@id/paincard"
        android:background="@android:color/darker_gray"/>

